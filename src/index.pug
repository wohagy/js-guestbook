doctype html
head
  // Required meta tags
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
  // Bootstrap CSS
  link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css' integrity='sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk' crossorigin='anonymous')
  link(rel='stylesheet' href='style.css')
  title Hello, world!
.container
  .row
    .col-6
      #comment-field
    .col-6
      form
        .form-group
          label(for='comment-name') Name:
          input#comment-name.form-control(type='name' placeholder='Your name')
        .form-group
          label(for='comment-body') Comment:
          input#comment-body.form-control(type='name' placeholder='Your comment')
        button#comment-add.btn.btn-primary(type='submit')
          | Post
        
        .page-number
          ul#pagination.page-number__buttons
